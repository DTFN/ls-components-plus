{
  "name": "ls-components-plus",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:ls-components": "pnpm -r --filter ls-components run dev",
    "build-dev:ls-components": "pnpm -r --filter ls-components run build:dev",
    "build-test:ls-components": "pnpm -r --filter ls-components run build:test",
    "build-pre:ls-components": "pnpm -r --filter ls-components run build:pre",
    "build-prod:ls-components": "pnpm -r --filter ls-components run build:prod",
    "dev:ls-docs": "pnpm -r --filter ls-docs run dev",
    "build-dev:ls-docs": "pnpm -r --filter ls-docs run build:dev",
    "build-test:ls-docs": "pnpm -r --filter ls-docs run build:test",
    "build-pre:ls-docs": "pnpm -r --filter ls-docs run build:pre",
    "build-prod:ls-docs": "pnpm -r --filter ls-docs run build:prod",
    "prepare": "husky install",
    "lint:eslint": "eslint --fix --ext .js,.ts,.vue ./src",
    "lint:prettier": "prettier --write \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:lint-staged": "lint-staged",
    "release": "standard-version",
    "commit": "git add -A && git-cz"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.1.0"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@vue/shared": "^3.4.38",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/core": "^10.11.1",
    "dayjs": "^1.11.13",
    "element-plus": "^2.8.1",
    "lodash-es": "^4.17.21",
    "pinia": "^2.2.2",
    "vue": "^3.4.38",
    "vue-router": "^4.4.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@iconify/vue": "^4.1.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-vue": "^5.1.2",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "cz-git": "^1.9.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.19.2",
    "fast-glob": "^3.3.2",
    "file-loader": "^6.2.0",
    "husky": "^9.1.5",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.2.9",
    "lodash-unified": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-html": "^1.5.0",
    "postcss-pxtorem": "5.1.1",
    "prettier": "^3.3.3",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.8",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "^5.5.4",
    "unplugin-auto-import": "^0.18.2",
    "unplugin-icons": "^0.19.2",
    "unplugin-vue-components": "^0.27.4",
    "unplugin-vue-define-options": "^1.4.9",
    "unplugin-vue-setup-extend-plus": "^1.0.1",
    "vite": "^5.4.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-simple-html": "^0.1.2",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue-tsc": "^2.0.29"
  }
}
